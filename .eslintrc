{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "xo-space",
    "plugin:solid/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "solid",
    "@typescript-eslint"
  ],
  "rules": {
    "capitalized-comments": ["off"],
    "object-curly-spacing": ["error", "always"],
    "camelcase": ["off"],
    "solid/no-innerhtml": ["warn"]
  }
}
